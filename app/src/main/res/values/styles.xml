<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginEditText" parent="android:Widget.EditText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="LoginTextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RegisterTextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RegisterEditText" parent="android:Widget.EditText">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>

    </style>

    <style name="LoginTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="RegisterTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
